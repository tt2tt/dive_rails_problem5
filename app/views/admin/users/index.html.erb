<div class="users">
  <% @users.each do |user| %>
  <div class="user">
    <p>
      <%= user.id %>
    </p>
    <p>
      <%= link_to "#{user.name}", admin_user_path(user.id) %>
       タスク<%= user.tasks.length %>個
    </p>
  </div>
  <% end %>

  <div class="page_option">
    <%= paginate @users, id: 'page_option'%>
  </div>

  <%= link_to 'ユーザーを作成する', new_admin_user_path, class: 'admin_user_create' %>

</div>
