<div class="admin_show">
  <div class="user_detail">
    <h3>ユーザー詳細</h3>

    <p><%= @user.name %></p>
    <p><%= @user.email %></p>

    <p>
      <%= link_to '編集', edit_admin_user_path(@user.id), class: 'btn btn-info' %>
      <%= link_to '削除', admin_user_path(@user.id), method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger' %>
    </p>
  </div>

  <div class="tasks">
    <% @tasks.each do |task| %>
    <div class="task">
      <%= link_to "#{task.name} &ensp;(#{task.status})".html_safe, task, class: "task_link" %>
      <p>
        優先度 &nbsp; <%= task.priority %>
      </p>
      <%= l task.deadline %>
    </div>
    <% end %>
    <%= paginate @tasks %>
  </div>
</div>
