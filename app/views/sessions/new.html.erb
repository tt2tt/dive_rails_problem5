<h1>ログイン</h1>

<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>

  <%= f.label :email, t('views.email') %>
  <%= f.email_field :email %>

  <%= f.label :password, t('views.password') %>
  <%= f.password_field :password %>

  <%= f.submit "ログイン", id: 'user_login' %>
<% end %>
